<tr>
  <!-- <td class="col-sm-2"><%= link_to game.title.capitalize, game %></td> -->
  <td class="col-sm-4"><%= link_to game.title, edit_game_path(game) %></td>
  <!-- <td class="col-sm-4">
    <%= game.title %>
    &nbsp<%= link_to edit_game_path(game), class: 'edit-title' do %>
      edit
    <%end%>
  </td> -->

  <td class="col-sm-1.5"><%=game.genre%> </td>
  <% if game.platform == "3DS" %>
    <td style="color:orange" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "WII U"  %>
    <td style="color: lightblue" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "Switch"  %>
    <td style="color: red" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "PC"  %>
    <td style="color: rgb(164, 98, 231)" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "PS4"  %>
    <td style="color: rgb(90, 115, 221)" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "XBOX"  %>
    <td style="color: rgb(55, 190, 109)" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "PS Vita"  %>
    <td style="color: rgb(90, 115, 221)" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "Mobile"  %>
    <td style="color: rgb(180, 176, 176)" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% elsif game.platform == "Others"  %>
    <td style="color: black" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% else %>
    <td style="color: black" class="col-sm-1.5 platform"><%=game.platform%></td>
  <% end %>
  <!-- <td class="col-sm-1.5 platform"><%=game.platform%></td> -->
  <td class="col-sm-1.5"><%=game.progress%></td>
  <td class="col-sm-1.5"><%=game.release_date%></td>
  <td class="col-sm-2"><%=rating_for game, 'rating', star: 5, disable_after_rate: false, enable_half: true, cancel_place: 'right', star_path: '/images' %></td>

  <!-- <td>
    <%= link_to edit_game_path(game), class: 'edit-title' do %>
    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
    <%end%>
  </td> -->

</tr>
