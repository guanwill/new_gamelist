<div id="plan-container">
  <div class="table-responsive">

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-sm-4" data-field="title">Title</th>
      <th class="col-sm-1.5" data-field="genre">Genre</th>
      <th class="col-sm-1.5" data-field="platform">Platform</th>
      <th class="col-sm-1.5" data-field="progress">Progress</th>
      <th class="col-sm-1.5" data-field="release_date">Release Date</th>
      <th class="col-sm-2" data-field="rating">Rating</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% Game.all.each.sort_by(&:title).sort_by(&:platform).each do |game| %>
      <%if current_user.id == game.user_id%>
          <%if game.progress == 0 %>

              <tr>
                <!-- <td class="col-sm-2"><%= link_to game.title.capitalize, game %></td> -->
                <td class="col-sm-4"><%= game.title%></td>
                <td class="col-sm-1.5"><%=game.genre%></td>
                <td class="col-sm-1.5"><%=game.platform%></td>
                <td class="col-sm-1.5"><%=game.progress%>%</td>
                <td class="col-sm-1.5"><%=game.release_date%></td>
                <td class="col-sm-2"><%=rating_for game, 'rating', star: 5, disable_after_rate: false, enable_half: true, cancel_place: 'right', star_path: '/images' %></td>
                <td class><%= link_to 'Edit', edit_game_path(game) %></td>
                <td class><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>

          <%end%>

      <%end%>

    <%end%>
  </tbody>
</table>
</div>
</div>
